<%= render "shared/errors", obj: @post %>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :summary %>
    <%= f.text_field :summary %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: "btn btn-default") %>
  </div>
<% end %>
