                <div class="row">
                    <div class="col-lg-6">

                        <form role="form">

                          <!--hello-->
                          <%= render "shared/errors", obj: @post %>

                          <%= form_for(@post, html: {multipart: true}) do |f| %>
                            <div class="form-group">
                              <h2> <strong>Fill out the Post form </strong> </h2>
                            </div>
                            <div class="form-group">
                              <%= f.label :title %>
                              <%= f.text_field :title, class: "form-control" %>
                            </div>
                            <div class="form-group">
                              <%= f.label :summary %>
                              <%= f.text_field :summary, class: "form-control" %>
                            </div>
                             <div class="form-group">
                                <label>Category</label>
                                <select class="form-control">
                                    <option>Start Up</option>
                                    <option>Tech</option>
                                    <option>Business</option>
                                    <option>Social</option>
                                    <option>Bizz</option>
                                </select>
                            </div>
                            <div class="form-group ">
                              <%= f.label :description %>
                              <%= f.text_area :description, class: "form-control" %>
                            </div>

                            <div class="form-group">
                              <%= f.file_field :picture, accept: 'image/jpeg,image/jpg,image/gif,image/png' %>
                            </div>

                            <div>
                              <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: "btn btn-primary") %>
                            </div>
                          <% end %>
                          <!--hello-->

                        </form>

                    </div>

