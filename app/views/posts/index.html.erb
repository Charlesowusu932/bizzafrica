<div class="container">
  <h1>All Posts</h1>
   <div class="row">
  <% @posts.each do |post| %>
      <div class="col-md-6 col-sm-6">
      <div class="thumbnail">
        <%= image_tag(post.picture.url, class: "gravatar") if post.picture? %>
          <div class="caption">
            <h3><%= link_to post.title, post_path(post) %></h3>
            <p class="catc"><small>Business | By KofiDesign</small></p>
            <p><%= post.summary %></p>
          </div>
      </div>
    </div>
  <% end %>
   </div>
</div>
