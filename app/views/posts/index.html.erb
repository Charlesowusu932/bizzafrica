<!--Main Content which includes sidebar (sidebar down there)-->
<div class="container">
  <div class="row">
  <div class="main-content">
    <!--content starts hers-->
  <div class="col-md-8 col-sm-8">
    <!--Big Boxes starts here-->
    <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 col-sm-6">
        <div class="thumbnail">
          <%= image_tag(post.picture.url, class: "gravatar") if post.picture? %>
          <div class="caption">
            <h3><%= link_to post.title, post_path(post) %></h3>
            <% if post.categories.any? %>
            <p class="catc"><small><%= render post.categories %> | By KofiDesign</small></p>
            <% end %>
            <p><%= post.summary %></p>
            <p><%= link_to "Edit", edit_post_path(post), class: "btn btn-success" %></p>
          </div>
        </div>
      </div>
      <% end %>
      <!--Boxes ends here-->

      <!--Small boxes starts here-->
      <% @posts.each do |post| %>
        <div class="col-md-6 col-sm-12">
          <div class="thumbnail2">
        <div class="media">
          <div class="media-left">
            <a href="#">
              <%= image_tag(post.picture.url, size: "130x130") if post.picture? %>
            </a>
              </div>
              <div class="media-body konko">
                <h5 class="media-heading"><strong><%= link_to post.title, post_path(post) %></strong></h5>
                <% if post.categories.any? %>
                  <p class="catc"><small><%= render post.categories %> | By KofiDesign</small></p>
                <% end %>
                 <p><%= link_to "Edit", edit_post_path(post), class: "btn btn-success" %></p>
                  <p><%= post.summary %></p>
              </div>
        </div>
        </div>
      </div>
      <% end %>
      <!--Small boxes ends here-->

      <!--horizontal boxes strats here-->
      <% @posts.each do |post| %>
      <div class="col-md-12 col-sm-12">
        <div class="thumbnail2">
      <div class="media">
        <div class="media-left hidden-xs hidden-sm">
          <a href="#">
            <%= image_tag(post.picture.url, size: "250x280") if post.picture? %>
          </a>
            </div>
            <div class="media-body konko2">
              <h3 class="media-heading"><%= link_to post.title, post_path(post) %></h3>
              <% if post.categories.any? %>
                <p class="catc"><small><%= render post.categories %> | By KofiDesign</small></p>
              <% end %>
               <p><%= link_to "Edit", edit_post_path(post), class: "btn btn-success" %></p>
               <p><%= post.summary %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
      <!--horizontal boxes ends here-->
    </div>
  </div>
</div>
