<div class="container">
  <div class="row pad-top">
    <div class="col-md-12 col-md-offset-0">
        <h1><%= render "shared/page_title", title: "Category: #{@category.name}" %></h1>
        <p><%= @category.summary %></p>
    </div>

    <div class="col-md-12">
      <h3 class="page-header">
       Current Articles written in the <em><%= "'#{@category.name.downcase}'" %></em> category <button type="button" class="btn btn-danger pull-right">View all</button>
    </h3>
    </div>

    <% @category.posts.each do |post| %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
      <%= image_tag(post.picture.url, size: "750x500") if post.picture? %>
        <div class="caption">
          <h3><%= link_to post.title, post_path(post) %></h3>
          <p class="catc"><small><%= render post.categories %> | By KofiDesign</small></p>
          <p><%= post.summary %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
