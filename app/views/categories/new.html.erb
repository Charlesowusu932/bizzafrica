<div class="container">
  <%= render "shared/page_title", title: "Add a Category" %>

  <%= render "shared/errors", obj: @category %>

  <%= form_for @category do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_field :summary, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Add Category",  class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
