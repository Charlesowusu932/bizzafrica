 <% if obj.errors.any?%>
  <div class="alert alert-danger col-md-8 col-md-offset-2">
  <h4>The following <%= pluralize(obj.errors.count, "error") %> prevented you from creating a post</h4>
  <ul>
    <% obj.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</div>
